<h3>All Sprints</h3>

<style>
    
</style>

<div class="d-flex flex gap-5">
    @foreach (var sprint in sprintService.Sprints)
    {
        <div class="d-flex flex-column sprintsContainer">
            <div>
                <MudInputLabel for="sprintId">Sprint Id</MudInputLabel>
                <div>@sprint.SprintId</div>
            </div>
            <div>
                <MudInputLabel>Sprint Number</MudInputLabel>

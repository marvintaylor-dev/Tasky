                    <div>@sprint.CurrentMinCapacity</div>
                </div>
                <div class="sprintInfo">
                    <MudInputLabel>Current Max Capacity</MudInputLabel>
                    <div>@sprint.CurrentMaxCapacity</div>
                </div>
                <div class="sprintInfo">
                    <MudInputLabel>Sprint Budget</MudInputLabel>
                    <div>@sprint.SprintBudget</div>
                </div>
                <div class="sprintInfo">
                    <MudInputLabel>Planned Training</MudInputLabel>
                    <div>@sprint.PlannedTraining</div>
                </div>
                <div class="sprintInfo">
                    <MudInputLabel>Previous Velocity</MudInputLabel>
                    <div>@sprint.PreviousVelocity</div>
                </div>
                <div class="sprintInfo">
                    <MudInputLabel>Holidays</MudInputLabel>
                    <div>@sprint.Holidays</div>
                </div>
                <div class="sprintInfo">
                    <MudInputLabel>Members with Planned Leave Count</MudInputLabel>
                    <div>@sprint.MembersWithPlannedLeave.Count</div>
                </div>

            }
            <div>
                <button @onclick="()=>HandleDelete(sprint.SprintId)" class="btn btn-danger mb-3">Delete Sprint</button>
            </div>
        </div>

    }
</div>
@if (Show)
{
    <button class="btn btn-outline-primary" @onclick="ToggleShowMore">Show Less...</button>
}
else
{
    <button class="btn btn-primary" @onclick="ToggleShowMore">Show More...</button>
}



